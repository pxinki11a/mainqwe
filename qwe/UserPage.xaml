<Page x:Class="qwe.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:qwe"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage" Background="#040C0E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ListView Grid.Row="1" Name="LVUsers">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="{StaticResource ColorAccent}">
                        <Grid HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding name}" TextAlignment="Left"/>
                                <TextBlock Text="{Binding surname}"  TextAlignment="Left"/>
                                <TextBlock Text="{Binding patronymic}" TextAlignment="Left" />
                                <TextBlock Text="{Binding email}" TextAlignment="Left"/>
                                <TextBlock Text="{Binding login}"  TextAlignment="Left"/>
                                <TextBlock Text="{Binding password}" TextAlignment="Left" />
                                <TextBlock Text="{Binding Role.name}"  TextAlignment="Left"/>
                                <TextBlock Text="{Binding image}" TextAlignment="Left" />
                                <DockPanel Width="500" >
                                    <Button Width="150" Name="BtnEdit" HorizontalAlignment="Center" Click="BtnEdit_Click" Content="Редактировать"/>
                                    <Button Width="150" Name="BtnDelete" HorizontalAlignment="Center"  Click="BtnDelete_Click" Content="Удалить"/>
                                </DockPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
