<Page x:Class="qwe.ZanyatoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:qwe"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ZanyatoPage" Background="#040C0E">

    <Grid >
        <ListView Name="LWHistory" Margin="5,0,-5,5" Width="800" Background="#040C0E" SelectionChanged="LWHistory_SelectionChanged">
            <ListView.View>

                <GridView >

                    <GridView.Columns>
                        <GridViewColumn Width="250" Header="Кабинет" DisplayMemberBinding="{Binding cabinet.namecab}"></GridViewColumn>
                        <GridViewColumn Width="350" Header="Пользователь" DisplayMemberBinding="{Binding User.login}"></GridViewColumn>
                        <GridViewColumn Width="200" Header="Время" DisplayMemberBinding="{Binding time}"></GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
