<Page x:Class="qwe.login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:qwe"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid Background="#040C0E">
        <StackPanel VerticalAlignment="Center"
                    
                    HorizontalAlignment="Center">

            <TextBlock Text="Логин" />
            <TextBox Name="TBLogin" TextChanged="TBLogin_TextChanged"/>
            <TextBlock Text="Пароль"/>
            <TextBox Name="TBPassword"/>
            <StackPanel Orientation="Horizontal">
                <Button Click="BtnSignIn_Click"
                        Content="Войти"/>

                <Button Click="BtnSignUp_Click"
                        Content="Регистрация"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
